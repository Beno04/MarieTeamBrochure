<Window x:Class="MarieTeamBrochure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MarieTeam - Brochure PDF" Height="450" Width="800">
    <Grid>
        <Label Content="Liste des Bateaux" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <ListBox x:Name="BateauListBox" HorizontalAlignment="Left" Height="250" Margin="10,40,0,0" VerticalAlignment="Top" Width="350" 
                 SelectionChanged="BateauListBox_SelectionChanged"/>

        <Label Content="Équipements du bateau" HorizontalAlignment="Left" Margin="380,10,0,0" VerticalAlignment="Top"/>

        <ListBox x:Name="EquipementsListBox" HorizontalAlignment="Left" Height="250" Margin="380,40,0,0" VerticalAlignment="Top" Width="350"/>

        <Button Content="Générer PDF" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Width="150" Click="GenererPDF_Click"/>
    </Grid>
</Window>
