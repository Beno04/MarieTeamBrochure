<Window x:Class="MarieTeamBrochure.WindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MarieTeam - Brochure PDF" Height="900" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#E6EAF0">

    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0"/>
            <GradientStop Color="#63B8FF" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Margin="2">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#4A90E2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#4A90E2" CornerRadius="5" Margin="0,0,0,15">
            <TextBlock Text="Gestion des Bateaux" 
                       Foreground="White" 
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="20"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des bateaux -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10"
                    Margin="0,0,10,0"
                    Padding="10">
                <StackPanel>
                    <Label Content="Liste des Bateaux" 
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,10"/>
                    <ListBox x:Name="BateauListBox" 
                             Height="646"
                             SelectionChanged="BateauListBox_SelectionChanged"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemContainerStyle="{StaticResource RoundedListBoxItem}" RenderTransformOrigin="0.5,0.5">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.107"/>
                                <RotateTransform/>
                                <TranslateTransform X="0.623"/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Détails -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Champs de saisie -->
                    <Label Content="Nom du bateau :" Grid.Row="0" Grid.Column="0"
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNom" Grid.Row="0" Grid.Column="1"
                             Style="{StaticResource RoundedTextBox}" 
                             Margin="0,0,0,10"/>

                    <Label Content="Longueur :" Grid.Row="1" Grid.Column="0"
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLongueur" Grid.Row="1" Grid.Column="1"
                             Style="{StaticResource RoundedTextBox}" 
                             Margin="0,0,0,10"/>

                    <Label Content="Largeur :" Grid.Row="2" Grid.Column="0"
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLargeur" Grid.Row="2" Grid.Column="1"
                             Style="{StaticResource RoundedTextBox}" 
                             Margin="0,0,0,10"/>

                    <Label Content="Vitesse :" Grid.Row="3" Grid.Column="0"
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtVitesse" Grid.Row="3" Grid.Column="1"
                             Style="{StaticResource RoundedTextBox}" 
                             Margin="0,0,0,10"/>

                    <Label Content="Image URL :" Grid.Row="4" Grid.Column="0"
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtImage" Grid.Row="4" Grid.Column="1"
                             Style="{StaticResource RoundedTextBox}" 
                             Margin="0,0,0,10"/>

                    <!-- Liste des équipements -->
                    <Label Content="Équipements :" Grid.Row="5" Grid.Column="0"
                           Margin="0,10,10,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="EquipementsListBox" Grid.Row="5"
                             Margin="109,10,0,10"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemContainerStyle="{StaticResource RoundedListBoxItem}" Grid.ColumnSpan="2"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnAjouter" Content="Ajouter" 
                    Style="{StaticResource MainButtonStyle}" 
                    Width="120" Click="BtnAjouter_Click"/>

            <Button x:Name="BtnModifier" Content="Modifier" 
                    Style="{StaticResource MainButtonStyle}" 
                    Width="120" Margin="10,0,0,0" Click="BtnModifier_Click"/>

            <Button x:Name="BtnGenererPDF" Content="Générer PDF" 
                    Style="{StaticResource MainButtonStyle}" 
                    Width="150" Margin="10,0,0,0" Click="GenererPDF_Click"/>
        </StackPanel>
    </Grid>
</Window>
